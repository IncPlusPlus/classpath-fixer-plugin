<idea-plugin>
    <id>io.github.incplusplus.classpath-fixer-plugin</id>
    <name>Classpath Fixer</name>
    <vendor email="cloherty.ryan@gmail.com" url="http://incplusplus.github.io">IncPlusPlus</vendor>

    <description><![CDATA[
    Import bundle JARs from a .classpath file.<br>
    <em>example_tag</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
